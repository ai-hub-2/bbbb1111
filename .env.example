# Production Environment Variables - متغيرات بيئة الإنتاج
# Real production configuration - إعدادات إنتاج حقيقية

# Application Settings - إعدادات التطبيق
APP_NAME=Super Blue Badge App
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false
APP_SECRET_KEY=your-super-secret-key-here-change-in-production
APP_URL=https://yourdomain.com

# Database Configuration - إعدادات قاعدة البيانات
DATABASE_URL=postgresql://postgres:password@db:5432/production
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=production
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration - إعدادات Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Google APIs - APIs جوجل
GOOGLE_MERCHANT_API_KEY=your-google-merchant-api-key
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# OpenAI API - OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-organization-id
OPENAI_MODEL=gpt-4

# Cloudflare API - Cloudflare API
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_ACCOUNT_ID=your-account-id

# Security Settings - إعدادات الأمان
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
BCRYPT_ROUNDS=12

# Rate Limiting - تحديد معدل الطلبات
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=100000

# Monitoring & Logging - المراقبة والتسجيل
LOG_LEVEL=INFO
LOG_FILE=production.log
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Email Configuration - إعدادات البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Temp Mail Services - خدمات البريد المؤقت
SECONDMAIL_API_KEY=your-secondmail-api-key
TEMP_MAIL_SERVICE=1secmail
TEMP_MAIL_EXPIRY_HOURS=24

# SSL & Security - SSL والأمان
SSL_CERT_FILE=/etc/nginx/ssl/cert.pem
SSL_KEY_FILE=/etc/nginx/ssl/key.pem
SSL_VERIFY=true
HSTS_MAX_AGE=31536000

# Performance Settings - إعدادات الأداء
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=100M

# Cache Settings - إعدادات التخزين المؤقت
CACHE_TTL=3600
SESSION_TTL=86400
API_CACHE_TTL=300

# Backup Settings - إعدادات النسخ الاحتياطي
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Alerting - التنبيهات
ALERT_EMAIL=admin@yourdomain.com
ALERT_SLACK_WEBHOOK=your-slack-webhook-url
ALERT_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ALERT_TELEGRAM_CHAT_ID=your-telegram-chat-id

# Third-party Services - الخدمات الخارجية
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
SMS_SERVICE_API_KEY=your-sms-service-api-key
CDN_URL=https://cdn.yourdomain.com

# Development & Testing - التطوير والاختبار
TESTING_ENABLED=false
MOCK_APIS=false
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false